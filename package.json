{
  "name": "@mtti/funcs",
  "version": "2.1.0",
  "description": "A collection of TypeScript utility functions",
  "repository": "github:mtti/funcs",
  "author": "Matti Hiltunen",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=12.13.0"
  },
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "jest": "jest --config ./jest.config.json",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint --fix 'src/**/*.ts'",
    "prepare": "npm run build",
    "prepublishOnly": "npm run test",
    "setup": "npm install",
    "test": "npm run lint && npm run jest",
    "test:docker": "docker build -f ./Dockerfile-test -t ts-test . && docker run --rm -it ts-test",
    "tsc": "tsc"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test"
    }
  },
  "files": [
    "lib",
    "!lib/**/*.spec.js",
    "!lib/**/*.spec.d.ts",
    "!lib/**/*.spec.js.map"
  ],
  "devDependencies": {
    "@mtti/eslint-config-typescript": "2.0.0",
    "@types/jest": "26.0.3",
    "@types/node": "13.13.5",
    "@typescript-eslint/eslint-plugin": "3.3.0",
    "@typescript-eslint/parser": "3.3.0",
    "eslint": "7.3.1",
    "eslint-plugin-import": "2.21.2",
    "husky": "4.2.5",
    "jest": "26.1.0",
    "ts-jest": "26.1.0",
    "typescript": "3.9.5"
  }
}
